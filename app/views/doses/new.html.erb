<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description, label: 'How do you want to add it?' %>
        <%= f.association :ingredient, label: 'Pick an ingredient' %>
        <%= f.submit "Add Dose!!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

